<section class="contact-form-section">
  <form action="https://api.web3forms.com/submit" method="POST" id="contact-form">
    <fieldset>
      <legend><h3>Contact us</h3></legend>
      <p class="form-text">
        Leave us your query or message. We will contact you soon.
      </p>
      <section class="contact-inputs-wrapper">
        <input type="hidden" name="access_key" value="205881c5-0bfa-4e93-9523-81f375f5c37d">
        <input type="hidden" name="from_name" value="Bakery website">
        <input type="checkbox" name="botcheck" id="" style="display: none;">
        <section class="contact-sections">
          <label for="name-input"><i class="fa-regular fa-user"></i>Full Name</label
          >
          <input
            type="text"
            name="name"
            id="name-input"
            placeholder="Your name"
            minlength="6" 
            maxlength="70"
            required
          />
        </section>
        <section class="contact-sections">
          <label for="email-input"
            ><i class="fa-regular fa-envelope"></i> Email</label
          >
          <input
            type="email"
            name="email"
            id="email-input"
            placeholder="Your email"
            maxlength="120"
            required
          />
        </section>
        <section class="contact-sections">
          <label for="phone-input"
            ><i class="fa-solid fa-mobile-screen"></i> Phone</label
          >
          <input
            type="tel"
            name="email"
            id="phone-input"
            placeholder="Your phone"
            min="6"
            max="10"
            required
          />
        </section>
        <section class="contact-sections">
          <label for="city-input"
            ><i class="fa-regular fa-building"></i> City</label
          >
          <input
            type="text"
            name="city"
            id="city-input"
            placeholder="Your city"
            maxlength="100"
            required
          />
        </section>
        <section class="contact-sections">
          <label for="subject-input">
            <i class="fa-regular fa-pen-to-square"></i> Subject
          </label>
          <input
            type="text"
            name="subject"
            id="subject-input"
            placeholder="Your subject"
            minlength="6"
            maxlength="100"
            required
          />
        </section>
        <section class="contact-sections">
          <label for="message-input"
            ><i class="fa-regular fa-message"></i> Message</label
          >
          <textarea
            name="message"
            id="message-input"
            rows="10"
            placeholder="Your message"
            minlength="10"
            maxlength="500"
            required
          >
        </textarea>
        </section>
      </section>
    </fieldset>
    <section class="contact-btns-section">
      <button type="submit" class="contact-btn send-btn">Send</button>
      <button type="reset" class="contact-btn reset-btn">Reset</button>
    </section>
  </form>
</section>

<style>
  .contact-form-section {
    width: 100%;
    min-height: 50vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem 0rem 1rem;
  }

  #contact-form {
    min-width: 35%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  #contact-form fieldset {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  #contact-form fieldset legend {
    margin-bottom: 2rem;
  }

  #contact-form fieldset legend h3 {
    font-size: 2rem;
    font-weight: 300;
    text-transform: uppercase;
  }

  .form-text {
    color: #252525;
    font-size: 0.9rem;
    margin-bottom: 2rem;
  }

  #contact-form fieldset legend,
  #contact-form fieldset p {
    text-align: center;
  }

  .contact-inputs-wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .contact-sections {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    margin-bottom: 0.5rem;
  }

  .contact-sections label {
    color: #252525;
    font-size: 0.9rem;
    padding-left: 4px;
  }

  .contact-sections label,
  .contact-sections input,
  .contact-sections textarea {
    width: 100%;
    margin-bottom: 0.25rem;
  }

  .contact-sections input {
    padding: 0.25rem;
    border-radius: 0.25rem;
    border: 1px solid lightgray;
    background-color: #f6f6f6;
    color: #252525;
  }

  .contact-sections input:focus {
    border-color: gray;
  }

  .contact-sections textarea {
    resize: none;
    padding: 0.5rem;
    border-radius: 0.25rem;
    border: 1px solid lightgray;
    background-color: #f6f6f6;
    color: #252525;
  }

  .contact-sections textarea:focus {
    border-color: gray;
  }

  .contact-btns-section {
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  .contact-btn {
    width: 40%;
    padding: 0.75rem;
    border-radius: 0.25rem;
    cursor: pointer;
    color: #f6f6f6;
    text-shadow: 0rem 0rem 0.5rem #252525;
    font-size: 1rem;
    transition: 0.2s linear all;
  }

  .send-btn {
    background-color: #ff7070;
  }

  .send-btn:hover {
    background-color: crimson;
  }

  .reset-btn {
    background-color: slategray;
  }

  .reset-btn:hover {
    background-color: darkslategray;
  }

  /*---------  ----------*/

  @media all and (max-width: 480px) {

    #contact-form {
      width: 90%;
    }

    .contact-btns-section {
      flex-direction: column;
      padding-top: 1rem;
    }

    .contact-btn {
      width: 90%;
    }

    .contact-btn:first-child {
      margin-bottom: 0.75rem;
    }

  }

</style>
