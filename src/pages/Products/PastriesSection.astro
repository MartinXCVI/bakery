    <figure class="pastries-gallery-fig"><img src="/images/products/pastries/pastries-3.jpg" alt=""></figure>
    <figure class="pastries-gallery-fig"><img src="/images/products/pastries/pastries-4.jpg" alt=""></figure>
    <figure class="pastries-gallery-fig"><img src="/images/products/pastries/pastries-5.jpg" alt=""></figure>
