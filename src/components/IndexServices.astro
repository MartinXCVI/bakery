<style>

  .services-section {
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    position: relative;
  }

  .services-section::before {
    content: '';
    inset: 0;
    position: absolute;
    z-index: -5;
    background: #333333;
    opacity: 0.9;
  }

  .services-section::after {
    content: '';
    inset: 0;
    position: absolute;
    z-index: -1;
    background-image: url('/images/services-index.jpg');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    opacity: 0.5;
  }

  .services-section-div {
    width: 35%;
    display: flex;
    flex-direction: column;
    padding-left: 5rem;
    color: white;
  }

  .services-section-div h3 {
    font-family: 'Dancing Script', cursive;
    font-size: 2.5rem;
    font-weight: 400;
    letter-spacing: 0.25rem;
  }

  .services-section-div h3:nth-child(3) {
    margin-bottom: 1.5rem;
  }

  .services-section-div p {
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  .services-section-div h3, .services-section-div p {
    text-shadow: 0rem 0rem 0.35rem #252525;
  }

  .index-services-btn {
    width: 65%;
    padding: 0.5rem;
    border-radius: 0.25rem;
    background-color: #252525;
    color: #f6f6f6;
    text-align: center;
    transition: 0.2s linear all;
  }

  .index-services-btn:hover {
    cursor: pointer;
    background-color: #f6f6f6;
    color: #252525;
  }

  /*---------- to 479px -----------*/

  @media all and (max-width: 479px) {

    .services-section {
      padding-top: 1.5rem;
      padding-bottom: 1.5rem;
    }

    .services-section-div {
      width: 100%;
    }

    .services-section-div p {
      line-height: 2.5rem;
    }

  }

  /*---------- 480px to 767px -----------*/

  @media all and (min-width: 480px) and (max-width: 767px) {

    .services-section-div {
      width: 65%;
    }

    .services-section-div p {
      line-height: 2rem;
    }

    .index-services-btn {
      width: 75%;
    }

  }

  /*---------- to 767px -----------*/

  @media all and (max-width: 767px) {

    .services-section-div {
      padding-left: 2rem;
    }

  }

  /*---------- 768px to 959px -----------*/

  @media all and (min-width: 768px) and (max-width: 959px) {

  .services-section-div {
    width: 50%;
  }

  .services-section-div p {
    line-height: 2rem;
  }
}

</style>