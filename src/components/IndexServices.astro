<style>

  .services-section {
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    position: relative;
  }

  .services-section::before {
    content: '';
    inset: 0;
    position: absolute;
    z-index: -5;
    background: #333333;
    opacity: 0.9;
  }

  .services-section::after {
    content: '';
    inset: 0;
    position: absolute;
    z-index: -1;
    background-image: url('/images/services-index.jpg');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    opacity: 0.5;
  }

  .services-section-div {
    width: 35%;
    display: flex;
    flex-direction: column;
    padding-left: 5rem;
    color: white;
  }

  .services-section-div h3 {
    font-size: 1.75rem;
    font-weight: 400;
    letter-spacing: 0.25rem;
  }

  .services-section-div h3:nth-child(3) {
    margin-bottom: 1.5rem;
  }

  .services-section-div p {
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  .services-section-div h3, .services-section-div p {
    text-shadow: 0rem 0rem 0.35rem #252525;
  }

  .index-services-btn {
    width: 65%;
    padding: 0.5rem;
    border-radius: 0.25rem;
    background-color: #252525;
    color: #f6f6f6;
    text-align: center;
    transition: 0.2s linear all;
  }

  .index-services-btn:hover {
    cursor: pointer;
    background-color: #f6f6f6;
    color: #252525;
  }

</style>