  </section>
</section>

<style>

.index-carousel-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.action-section {
  width: 75%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #252525;
}

.action-subtitle {
  margin-bottom: 0.5rem;
  font-family: 'Dancing Script', cursive;
  font-size: 3rem;
}

.action-message-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 1rem;
}

.action-message-section p {
  width: 75%;
  margin-bottom: 1.5rem;
  text-align: center;
  line-height: 2rem;
}

.action-message-btn {
  padding: 1rem 2rem;
  background-color: #ff90aa;
  color: #f6f6f6;
  border-radius: 0.25rem;
  transition: 0.2s linear all;
}

.action-message-btn:hover {
  background-color: #ff7070;
}

#index-carousel-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.index-slider {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*---------- to 479px ----------*/

@media all and (max-width: 479px) {

  .action-subtitle {
    font-size: 2.25rem;
  }

}

/*---------- to 767px ----------*/

@media all and (max-width: 767px) {

.index-carousel-section {
  margin-bottom: 2rem;
}

}


</style>